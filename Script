async function hentVarer() {
  const response = await fetch("https://docs.google.com/spreadsheets/d/1iEXVG6KXOEtZ80THsYEvdyWf3nklVDDp_kbXvdk-Fcc/export?format=csv&gid=964782083");
  const data = await response.text();
  const linjer = data.split("\n").slice(2); // Hopper over overskrifter

  const varerDiv = document.getElementById("varer");

  linjer.forEach(linje => {
    const kolonner = linje.split(",");
    const navn = kolonner[1];
    const pris = kolonner[7];

    if (navn && pris) {
      const knapp = document.createElement("button");
      knapp.textContent = `${navn} – ${pris} kr`;
      knapp.onclick = () => leggTilVare(navn, pris);
      varerDiv.appendChild(knapp);
    }
  });
}

function leggTilVare(navn, pris) {
  const liste = document.getElementById("handleliste");
  const li = document.createElement("li");
  li.textContent = `${navn} – ${pris} kr`;
  liste.appendChild(li);
}

function sendSalg() {
  alert("Salg sendt! (her kan du legge til lagring/logikk)");
}

hentVarer();